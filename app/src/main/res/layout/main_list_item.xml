<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vgMainItemContainer"
    android:background="?attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivMainItemAvatar"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/ic_ilustration"/>

    <TextView
        android:id="@+id/tvMainItemUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="aliceromero"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/ivMainItemAvatar"
        app:layout_constraintStart_toEndOf="@+id/ivMainItemAvatar"/>

    <TextView
        android:id="@+id/tvMainItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Alice Romero"
        android:textColor="@color/white_80"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMainItemUser"
        app:layout_constraintStart_toStartOf="@+id/tvMainItemUser"/>

</androidx.constraintlayout.widget.ConstraintLayout>