<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Main_Activity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_black</item>
        <item name="colorPrimaryVariant">@color/main_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/main_black</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="TextInputLayoutDefault">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textSize">@dimen/text_size_hint</item>
        <item name="boxStrokeColor">#999999</item>
    </style>

    <style name="EditTextLayoutDefault">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_hint</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:background">@drawable/selector_button_default</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:layout_margin">@dimen/button_margin</item>

    </style>

    <style name="BackButtonDefault">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="srcCompat">@drawable/ic_keyboard_arrow_left_24px</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TitleDefault">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/titleSize</item>
    </style>

</resources>